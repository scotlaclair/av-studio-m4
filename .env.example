# AV-Studio Environment Configuration

# API Keys for External LLM Services
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# LLM Configuration
DEFAULT_LLM_PROVIDER=local  # local, openai, anthropic, google
LOCAL_LLM_MODEL=mlx-community/Llama-3.2-3B-Instruct-4bit
OLLAMA_BASE_URL=http://localhost:11434

# Gateway Configuration
GATEWAY_DAILY_BUDGET=50.0  # USD per day limit
GATEWAY_ALERT_THRESHOLD=30.0  # USD - alert when reached
PREFER_LOCAL_MODELS=true

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_LOG_LEVEL=info

# Authentication
API_KEY=your_api_key_here
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Processing Configuration
MAX_CONCURRENT_JOBS=4
TEMP_DIR=/tmp/av-studio
OUTPUT_DIR=./output
CACHE_DIR=./cache

# Audio Processing
DEMUCS_MODEL=htdemucs  # htdemucs, htdemucs_ft, mdx_extra
WHISPER_MODEL=large-v3  # tiny, base, small, medium, large-v3
WHISPER_DEVICE=mps  # mps (Metal), cpu
TARGET_LUFS=-14.0

# Video Processing
VIDEO_DEVICE=mps  # mps (Metal), cpu
SCENE_DETECTION_THRESHOLD=30.0

# Database
DATABASE_URL=sqlite+aiosqlite:///./av_studio.db

# Vector Store
CHROMADB_PATH=./chromadb
CHROMADB_COLLECTION=av_studio_memory

# External Integrations (Optional)
ELEVENLABS_API_KEY=
BMI_API_KEY=
DISTROKID_API_KEY=

# MCP Server
MCP_TRANSPORT=stdio  # stdio, http
MCP_PORT=3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json, text
LOG_FILE=./logs/av_studio.log

# Development
DEBUG=false
ENVIRONMENT=production  # development, staging, production
