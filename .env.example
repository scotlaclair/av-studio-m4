# AV-Studio Environment Configuration

# API Keys for External LLM Services
AV_OPENAI_API_KEY=your_openai_api_key_here
AV_ANTHROPIC_API_KEY=your_anthropic_api_key_here
AV_GOOGLE_API_KEY=your_google_api_key_here
AV_ELEVENLABS_API_KEY=

# Application
AV_APP_NAME=AV Studio
AV_DEBUG=false
AV_HOST=0.0.0.0
AV_PORT=8000

# Paths
AV_BASE_DIR=~/av-studio
AV_MEDIA_DIR=~/av-studio/media
AV_MODELS_DIR=~/av-studio/models
AV_CACHE_DIR=~/av-studio/cache

# Local LLM - Ollama
AV_OLLAMA_BASE_URL=http://localhost:11434
AV_OLLAMA_DEFAULT_MODEL=llama3.2:8b

# Local LLM - MLX (recommended for M4 Max)
AV_MLX_DEFAULT_MODEL=mlx-community/Llama-3.2-8B-Instruct-4bit
AV_MLX_MAX_TOKENS=4096

# Processing
AV_USE_MPS=true  # Metal Performance Shaders
AV_USE_MLX=true  # Apple MLX framework
AV_MAX_CONCURRENT_JOBS=4

# Smart Router defaults
AV_DEFAULT_LOCAL_MODEL=ollama
AV_COST_THRESHOLD_USD=0.10  # Route to local if cost exceeds
AV_LATENCY_THRESHOLD_MS=500  # Route to local if latency exceeds

# Database
AV_DATABASE_URL=sqlite:///./av_studio.db

# Redis (optional, for caching)
AV_REDIS_URL=redis://localhost:6379
